<h1>My cocktails</h1>

<h5><%= link_to "+ Add new cocktail", new_cocktail_path, class: "btn btn-primary" %></h5>

<% @cocktails.each do |cocktail| %>
<div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://i.ndtvimg.com/i/2015-04/margarita_625x350_61427975955.jpg');">
  <div class="card-category">Popular</div>
  <div class="card-description">
    <h2><%= cocktail.name %></h2>
  </div>
  <img class="card-user" src="https://avatars2.githubusercontent.com/u/38565160?v=4">
  <a class="card-link" href="/cocktails/<%= cocktail.id %>" ></a>
</div>

<% end %>


